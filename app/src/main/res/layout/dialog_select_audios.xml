<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_dialog_select_audios"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/list_item_normal"
        android:orientation="horizontal">

        <jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView
            android:id="@+id/heading_recording_date"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/txt_recording_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"

                android:text="@string/recording_date"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/img_recording_date_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:visibility="gone" />
        </jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView>

        <jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView
            android:id="@+id/heading_serial_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/txt_serial_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/serial_number"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/img_serial_number_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:visibility="gone" />
        </jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView>

        <jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView
            android:id="@+id/heading_productname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/txt_model_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/model_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/img_model_name_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:visibility="gone" />
        </jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView>

        <jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView
            android:id="@+id/heading_color_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/txt_job_classification"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/job_classification"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/img_job_classification_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:visibility="gone" />
        </jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView>

        <jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView
            android:id="@+id/heading_paper_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/txt_paper_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/paper_type"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/img_paper_type_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:visibility="gone" />
        </jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView>

        <jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView
            android:id="@+id/heading_audio_file_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.25">

            <TextView
                android:id="@+id/txt_audio_file_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="@string/audio_file_name"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/img_audio_file_name_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:textSize="20sp"
                android:visibility="gone" />
        </jp.co.fujixerox.sa.ion.views.SelectAudioHeadingView>
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/table_audios"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/rgb_white"
        android:scrollbars="vertical" />

</LinearLayout>